{
  "name": "ki-web",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "bundle": "esbuild src/ki-web-demo.ts --bundle --outfile=dist/ki-web-demo.js --platform=browser --target=es2019",
    "build": "npm run typecheck && npm run bundle",
    "dev": "tsc -w -p .",
    "format": "biome check --write .",
    "test": "vitest"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "esbuild": "0.27.0",
    "rimraf": "6.1.0",
    "typescript": "5.9.3",
    "vitest": "^4.0.12"
  }
}
